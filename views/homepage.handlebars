{{#if session.loggedIn}}
  {{#each posts as |post|}}
    <div class="border margin-bottom border-rounded">
      <div class="hero" id="post" post-id={{post.id}}>
        <div class="flex-row justify-space-between">
          <h2 class="light-font">{{post.title}}</h2>
          <span>Posted by
            <span class="text-italic">{{post.user.username}}</span>
            on
            {{format_date post.createdAt}}</span>
        </div>
      </div>
      <div class="margin-left">
        {{post.content}}
      </div>
      {{! ---------- COMMENT SECTION START -------------- }}
      <div class="hidden" id="comment-{{post.id}}" state="off">
        {{#each post.comments}}
          <div class="flex-row justify-space-between margin-left">
            <span>{{this.comment_text}}
              || posted by:
              {{this.user.username}}
              on
              {{format_date this.createdAt}}</span>
          </div>
        {{/each}}
        <div class="flex-row margin-left">
          <form class="w-75" id="comment-form">
            <label class="form-label">Comment</label>
            <textarea
              type="class"
              class="form-input"
              id="comment-text"
            ></textarea>
            <input
              type="hidden"
              value="{{@root.session.user_id}}"
              name="user_id"
              id="comment_user_id"
            />
            <input
              type="hidden"
              value="{{post.id}}"
              name="user_id"
              id="comment_post_id"
            />
            <button
              class="btn"
              type="submit"
              id="comment-submit"
            >Comment!</button>
          </form>
        </div>
      </div>
      {{! COMMENT END }}
    </div>
  {{/each}}
{{else}}
  {{#each posts as |post|}}
    <div class="border margin-bottom border-rounded">
      <div class="hero" id="post" post-id={{post.id}}>
        <div class="flex-row justify-space-between">
          <h2 class="light-font">{{post.title}}</h2>
          <span>Posted by
            <span class="text-italic">{{post.user.username}}</span>
            on
            {{format_date post.createdAt}}</span>
        </div>
      </div>
      <div class="margin-left">
        {{post.content}}
      </div>
      {{! ---------- COMMENT SECTION START -------------- }}
      <div class="hidden" id="comment-{{post.id}}" state="off">
        {{#each post.comments}}
          <div class="flex-row justify-space-between margin-left">
            <span>{{this.comment_text}}
              || posted by:
              {{this.user.username}}
              on
              {{format_date this.createdAt}}</span>
          </div>
        {{/each}}
        <textarea
          type="class"
          class="form-input"
          placeholder="Login to Comment!"
        ></textarea>
        <button class="btn" id="login-comment">Login</button>
      </div>
      {{! -------------------- COMMETN SECTION END --------------------- }}
    </div>
  {{/each}}
{{/if}}

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
></script>
<script src="/javascript/comment.js"></script>