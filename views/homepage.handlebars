{{#each posts as |post|}}
<div class="border margin-bottom" id="post">
    <div class="hero">
        <div class="flex-row justify-space-between">
            <h2 class="light-font">{{post.title}}</h2>
            <span>Posted by {{post.user.username}} on {{format_date post.createdAt}}</span> 
        </div>
    </div>
    <div>
      {{post.content}} 
    </div>
</div>
<div class="hidden" id="comment" state="off">
<div>
    TEST DATA BRO
</div>
</div>
{{/each}}

<script src="/javascript/comment.js"></script>